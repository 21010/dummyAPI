{
    "version": 2,
    "builds": [{ 
        "src": "index.js",
        "use": "@now/node-server"
    }],
    "routes": [
        {
            "src": "/contacts",
            "dest": "/index.js",
            "headers": {
                "Access-Control-Allow-Origin": "*"
            },
            "methods": ["GET"]
        },
        {
            "src": "/contacts/reset",
            "dest": "/index.js",
            "headers": {
                "Access-Control-Allow-Origin": "*"
            },
            "methods": ["POST"]
        },
        {
            "src": "/contact",
            "dest": "/index.js",
            "headers": {
                "Access-Control-Allow-Origin": "*"
            },
            "methods": ["POST"]
        },
        {
            "src": "/contact/(?<id>[^/]+)",
            "dest": "/index.js",
            "headers": {
                "Access-Control-Allow-Origin": "*"
            },
            "methods": ["GET", "DELETE", "PUT"]
        }
    ]
}